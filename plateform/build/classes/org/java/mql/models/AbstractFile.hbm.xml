<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.java.mql.models.AbstractFile" table="ABSTRACT_FILE"
		discriminator-value="A">

		<meta attribute="class-description">
			This class contains the file detail.
		</meta>

		<!-- private long id; -->
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>

		<discriminator column="DISCRIMINATOR" type="string" />

		<!-- private String name; -->
		<property name="name" column="NAME" type="string" />

		<!-- private String path; -->
		<property name="path" column="PATH" type="string" />


		<!-- private Liverable liverable; -->
		<many-to-one name="liverable" class="org.java.mql.models.Liverable"
			column="LIVERABLE" />

		<subclass name="org.java.mql.models.Directory"
			discriminator-value="DIRECTORY">
			<property name="type" column="TYPE" type="org.java.mql.models.Type" />
			<set name="files" cascade="all">
				<key column="ID" />
				<one-to-many class="org.java.mql.models.AbstractFile" />
			</set>
		</subclass>
		
		<!-- Each subclass that extends AbstractFile class should be declared in this Mapping configuration File : written by YcDev -->
		<subclass name="org.java.mql.models.File" discriminator-value="FILE">
		</subclass>
		
		<!-- <subclass name="org.java.mql.models.File"
			discriminator-value="F" /> -->
	</class>
</hibernate-mapping>
