<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "Employee" table = "EMPLOYEE">
      
      <meta attribute = "class-description">
         This class contains the employee detail. 
      </meta>
      <!-- private long id; -->
      <id name = "id" type = "long" column = "ID">
         <generator class="native"/>
      </id>
      
       <!-- private String name; -->
      <property name = "name" column = "NAME" type = "string"/>
      
      
       <!-- private Ensignant ensignant; -->
      <many-to-one name="ensignant" class="org.java.mql.models.p1.Ensignant" />
      
      
      <!-- private List<Project> projects; -->
      <set name = "projects" cascade="all">
         <key column = "ID_PROJECT"/>
         <one-to-many  class="org.java.mql.models.p2.Project" />
      </set>
      
      
      <!-- private List<Team> teams; -->
      <set name = "teams" cascade="all">
         <key column = "ID_TEAM"/>
         <one-to-many  class="org.java.mql.models.p1.Team" />
      </set>
      
   </class>
</hibernate-mapping>
