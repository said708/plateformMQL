<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.java.mql.models.Project" table="PROJECT">

		<meta attribute="class-description">
			This class contains the project detail.
		</meta>
		<!-- private long id; -->
		<id name="id" type="long" column="PROJECT_ID">
			<generator class="native" />
		</id>

		<!--private String name; -->
		<property name="name" column="NAME" type="string" />

		<!-- private String desc;-->
		<property name="description" column="DESCRIPTION" type="string" />

		<!-- private String datePublication;-->
		<property name="datePublication" column="DATE_PUBLICATION"
			type="string" />

		<!-- private String deadLine;-->
		<property name="deadLine" column="DEAD_LINE" type="string" />
		
		<!-- private Matiere matiere; -->
		<many-to-one   name="matiere" column="MATIERE" class="org.java.mql.models.Matiere" />
		
		<!-- private Liverable liverable; -->
		<many-to-one  name="liverable"  class="org.java.mql.models.Liverable" not-found="ignore" insert="false" update="false" column="id" unique="true"/>
		

	</class>
</hibernate-mapping>
