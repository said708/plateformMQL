<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.java.mql.models.Liverable" table="LIVERABLE">

		<meta attribute="class-description">
			This class contains the liverable detail.
		</meta>
		<!-- private long id; -->
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>
		<!-- private String name; -->
		<property name="name" column="NAME" type="string" />
		
		<!-- private List<AbstractFile> files; -->
		<list name="files" cascade="all">
			<key column="ID" />
			<list-index column="ABSTRACT_FILE_INDEX" />
			<one-to-many class="org.java.mql.models.AbstractFile" />
		</list>
		
		<!-- private Project project; -->
		<many-to-one name="project" column="PROJECT" class="org.java.mql.models.Project" />

	</class>
</hibernate-mapping>
